<Page
    x:Class="QRCodeGenerator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:QRCodeGenerator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <CommandBar Grid.Row="1" IsOpen="True">
            <AppBarButton Label="Generate" Icon="Add" Click="Generate_Click"></AppBarButton>
            <AppBarButton Label="Edit" Icon="Edit" Click="Edit_Click"></AppBarButton>
            <AppBarButton Label="About" Icon="Home" Click="About_Click"></AppBarButton>
        </CommandBar>
    </Grid>
    
</Page>
